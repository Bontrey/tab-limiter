{
  "manifest_version": 2,

  "name": "Host-based Tab Limiter",
  "description": "Keeps the number of tabs for individual, specified hosts no greater than a limit",
  "version": "0.0.0.1",

  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ]
}
